<Hello_consumption>:
    #size_hint: .5, .5
    #pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    label_data_received: my_label_data_received
    label_data_sent: my_label_data_sent
    label_data_first_date: my_label_data_first_date
    label_data_energy_consumed: my_label_data_energy_consumed
    label_data_co2_emited: my_label_data_co2_emited
    label_news: my_label_data_news


    TabbedPanelItem:
        text: 'News'
        Label:
            id: my_label_data_news
            text: 'First tab content area hello Worlds!!!!'
    TabbedPanelItem:
        text: 'Consumption'
        GridLayout:
            cols:1

            GridLayout:
                cols:2

                Label:
                    text: 'Start date'
                Label:
                    id: my_label_data_first_date
                    text: 'Start date'
                Label:
                    text: 'Data Received'
                Label:
                    id: my_label_data_received
                    text: '0 GB'
                Label:
                    text: 'Data Sent'
                Label:
                    id: my_label_data_sent
                    text: '0 GB'
                Label:
                    text: 'Transfert Energy Consummed'
                Label:
                    id: my_label_data_energy_consumed
                    text: '0 kwh'
                Label:
                    text: 'CO2 Emitted'
                Label:
                    id: my_label_data_co2_emited
                    text: '0 kg'
            Button:
                text: 'Force Update'
                on_press: root.forceSynchro()
    TabbedPanelItem:
        text: 'Setup'
        GridLayout:
            cols:2
        
            Label:
                id: input
                text: "Send Data"
                pos_hint: {"x":0.1, "y":0.4}
                #size_hint: 0.5,0.05
                background_disabled_normal: ""
                disabled: False
            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                value:"s1"
                active: True
                #pos_hint: {"x":-0.4, "y":0.4}
                #size_hint_x: .10
                #size_hint_y: .10
        