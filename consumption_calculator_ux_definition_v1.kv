<Hello_consumption>:
    #size_hint: .5, .5
    #pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    #Report
    label_data_received: my_label_data_received
    label_data_sent: my_label_data_sent
    label_data_first_date: my_label_data_first_date
    label_data_energy_consumed: my_label_data_energy_consumed
    label_data_co2_emited: my_label_data_co2_emited
    label_laptop_energy_consumed: my_label_device_energy_consumed
    label_datacenter_energy_consumed: my_label_datacenter_energy_consumed
    label_energy_total_consumed: my_label_energy_total_consumed
    
    #News
    label_news: my_label_data_news
    label_explanation: my_label_explanation


    TabbedPanelItem:
        text: 'News'
        GridLayout:
            cols:1

            Label:
                id: my_label_data_news
                text: 'First tab content area hello Worlds!!!!'

            Label:
                id: my_label_explanation
                text: 'This PALO IT Application is dedicated to compute your carbon footprint \n and help you to understand the levers at your disposal.'
    TabbedPanelItem:
        text: 'Consumption'
        GridLayout:
            cols:1

            GridLayout:
                cols:2

                Label:
                    text: 'Start date'
                Label:
                    id: my_label_data_first_date
                    text: 'Start date'
                Label:
                    text: 'Data Received'
                Label:
                    id: my_label_data_received
                    text: '0 GB'
                Label:
                    text: 'Data Sent'
                Label:
                    id: my_label_data_sent
                    text: '0 GB'
                Label:
                    text: 'Transfert Energy Consummed'
                Label:
                    id: my_label_data_energy_consumed
                    text: '0 kwh'
                Label:
                    text: 'Laptop Energy Consummed'
                Label:
                    id: my_label_device_energy_consumed
                    text: '0 kwh'
                Label:
                    text: 'Data Center Energy Consummed'
                Label:
                    id: my_label_datacenter_energy_consumed
                    text: '0 kwh'
                Label:
                    text: 'Total Energy Consummed'
                Label:
                    id: my_label_energy_total_consumed
                    text: '0 kwh'
                Label:
                    text: 'CO2 Emitted'
                Label:
                    id: my_label_data_co2_emited
                    text: '0 kg'
            Button:
                text: 'Force Update'
                on_press: root.forceSynchro()
    
    # ------------------------------------------------------------------------------------
    # ------------------------------------- Calculator -----------------------------------
    # ------------------------------------------------------------------------------------
    TabbedPanelItem:
        text: 'Calculator WIP'
        GridLayout:
            cols:1
            GridLayout:
                cols:1
                GridLayout:
                    Label:
                        text: 'Col1'
                    Slider:
                        id: slider_line_type
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'
                    Label:
                        text: str(slider_line_type.value)
                    Label:
                        text: 'str(slider_line_type.value)'
                # ---------------------------- COL RATIO MOBILE - LAPTOP - TELEVISION --------------------
                GridLayout:
                    cols:3

                    Slider:
                        id: slider_mobile
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'

                    Label:
                        text: str(slider_mobile.value)
                    Label:
                        text: 'str(slider_mobile.value)'
                    Slider:
                        id: slider_laptop
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'

                    Label:
                        text: str(slider_laptop.value)
                    Label:
                        text: 'str(slider_laptop.value)'
                    Slider:
                        id: slider_television
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'
                    Label:
                        text: str(slider_television.value)
                    Label:
                        text: 'str(slider_television.value)'
            # ------------------------------------- COMPUTE BUTTON -----------------------------------
            GridLayout:
                cols:1
                Button:
                    text: 'COMPUTE'
                    #on_press: root.forceSynchro()
            # ------------------------------------- RESULT -----------------------------------
            GridLayout:
                cols:2
                Label:
                    text: 'Data Received'
                Label:
                    id: my_label_data_received_calculator
                    text: '0 GB'
                Label:
                    text: 'Data Sent'
                Label:
                    id: my_label_data_sent_calculator
                    text: '0 GB'
                Label:
                    text: 'Transfert Energy Consummed'
                Label:
                    id: my_label_data_energy_consumed_calculator
                    text: '0 kwh'
                Label:
                    text: 'CO2 Emitted'
                Label:
                    id: my_label_data_co2_emited_calculator
                    text: '0 kg'

    # ------------------------------------------------------------------------------------
    # ------------------------------------- SETTINGS -------------------------------------
    # ------------------------------------------------------------------------------------
    TabbedPanelItem:
        text: 'Settings'
        GridLayout:
            cols:2
        
            Label:
                id: input
                text: "Send Data"
                pos_hint: {"x":0.1, "y":0.4}
                #size_hint: 0.5,0.05
                background_disabled_normal: ""
                disabled: False
            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                value:"s1"
                active: True
                #pos_hint: {"x":-0.4, "y":0.4}
                #size_hint_x: .10
                #size_hint_y: .10
        